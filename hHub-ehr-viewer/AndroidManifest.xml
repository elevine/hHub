<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.projecthdata.ehr.viewer"
    android:versionCode="1"
    android:versionName="0.0.1-SNAPSHOT" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="13" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:name="org.projecthdata.hhub.HHubApplication"
        android:theme="@style/Theme.Sherlock.Light" >
        <activity android:name=".activities.MainActivity" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen">
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.EhrUrlFormActivity" />
        <activity android:name=".activities.EhrActivity" />
        <activity android:name="org.projecthdata.hhub.ui.HDataWebOauthActivity" />
        <service android:name="org.projecthdata.ehr.viewer.service.HDataSyncService"/>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>