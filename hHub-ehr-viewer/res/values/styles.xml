<resources>
	<style name="Theme.hData" parent="@style/Theme.Sherlock.Light"/>
	

	<!-- LinearLayout container that provides some padding for its contents -->
	<style name="Theme.hData.ContentContainer">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_width">fill_parent</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">5dp</item>
	</style>

	<style name="Theme.hData.Content">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@color/text_content_background</item>
		<item name="android:typeface">sans</item>
		<item name="android:padding">10dp</item>
	</style>
	
	<!-- Styles a text view to be a heading -->
	<style name="Theme.hData.Content.Heading">
		<item name="android:textSize">25dp</item>
		<item name="android:textStyle">bold</item>
	</style>
	
	<style name="Theme.hData.Content.Body">
		<item name="android:textSize">16dp</item>
	</style>


</resources>
