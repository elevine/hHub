<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:orientation="vertical" android:padding="5dp">

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Title"
		android:textSize="16sp" android:textStyle="bold" android:paddingTop="3dp"/>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/section_metadata_list_item_title" />

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Content Type:"
		android:textSize="16sp" android:textStyle="bold" android:paddingTop="3dp"/>


	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/section_metadata_list_item_content_type" />

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Link"
		android:textSize="16sp" android:textStyle="bold" android:paddingTop="3dp"/>
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:id="@+id/section_metadata_list_item_link" />

</LinearLayout>
